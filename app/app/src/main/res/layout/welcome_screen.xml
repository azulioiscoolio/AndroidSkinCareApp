<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/light_pink">

    <TextView
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Skincare Builder for Terps!"
        android:textSize="35dp"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:fontFamily="@font/lobster"></TextView>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:id="@+id/image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="@font/arvo"
        android:text="Click the button below to start with a quiz about your skin!" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:id="@+id/startButton"
        android:background="@drawable/other_next_button"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:onClick="goToQuiz"
        android:textSize="20dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/white"
        android:text="   Take Quiz   "
        />

    <LinearLayout
        android:id="@+id/ad_view"
        android:layout_below="@+id/startButton"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FDDD" >
    </LinearLayout>

</RelativeLayout>